<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <IncludeSymbols>true</IncludeSymbols>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
	  <Authors>Daniele Fusi</Authors>
	  <Company>Fusi</Company>
	  <Product>Cadmus</Product>
	  <Description>Philological parts for Cadmus.</Description>
	  <Copyright>by Daniele Fusi 2022</Copyright>
	  <NeutralLanguage>en-US</NeutralLanguage>
	  <Version>3.0.0</Version>
	  <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
	  <PackageTags>Cadmus;philology parts</PackageTags>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="DiffMatchPatch" Version="1.0.3" />
	<PackageReference Include="Cadmus.Core" Version="2.5.2" />
	<PackageReference Include="Cadmus.Refs.Bricks" Version="2.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
</Project>
